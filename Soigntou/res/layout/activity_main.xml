<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.davy.soigntou.MainActivity" >

    <Button
        android:id="@+id/but1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="186dp"
        android:text="@string/but1" />
    
   <TextView
        android:id="@+id/kmText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekKm"
        android:layout_centerHorizontal="true"
        android:text=" km"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/kmValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/but1"
        android:layout_marginBottom="14dp"
        android:layout_toLeftOf="@+id/kmText"
        android:text="1"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <SeekBar
        android:id="@+id/seekKm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kmValue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:max="149" />
    
    <TextView
        android:id="@+id/kmView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekKm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/kmView" />
    
    <Button
        android:id="@+id/moinsButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/kmView"
        android:layout_alignTop="@+id/kmValue"
        android:text="-" />

    <Button
        android:id="@+id/plusButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekKm"
        android:layout_toRightOf="@+id/but1"
        android:text="+" />

    

</RelativeLayout>